<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WEDEMY</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include("../_navbar") %>

  <div class="container mt-5" >
    <h1>Welcome <%= instructor.name %></h1>
    <h4 style="align-self: flex-start;">Your course list :</h4>
    <div class="card-container">
      <% instructor.Courses.forEach(el=>{ %>
        <div class="card mb-3" >
          <img src="<%= el.poster %>" class="card-img-top h-50 object-fit-cover" alt="invalid">
          <div class="card-body">
            <h5 class="card-title"><%= el.name %></h5>
            <h6 class="card-subtitle mb-2 text-body-secondary"><%= el.Category.name %></h6>
            <h6 class="card-subtitle mb-2 text-body-secondary">Duration : <%= el.duration %> Minutes</h6>
            <h6 class="card-subtitle mb-2 text-body-secondary">Total Student : <%= el.StudentDetails.length %></h6>
            <p class="card-text text-truncate"><%= el.description %></p>
          </div>
          <div class="w-100" style="display: grid;grid-template-columns: 45% 45%;gap: 10%;align-self: flex-end; padding: 10px;">
            <a href="/instructor/<%= instructorId %>/courses/<%= el.id %>"  class="btn btn-warning">Edit</a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <%- include("../_dummy") %>
</body>
</html>